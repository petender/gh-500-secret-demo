<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GH500SecretDemo</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GH500SecretDemo.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex">
        <!-- Side Navigation -->
        <nav class="bg-light border-end" style="min-width: 250px; min-height: 100vh;">
            <div class="p-3">
                <h5 class="mb-3">GH-500 Secret Demo</h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">
                            <i class="bi bi-house-door"></i> Home
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-dark" asp-area="" asp-page="/AboutGHAS">
                            <i class="bi bi-shield-check"></i> About GHAS
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="flex-grow-1">
            <main role="main" class="p-4">
                @RenderBody()
            </main>

            <footer class="border-top footer text-muted mt-auto">
                <div class="container">
                    &copy; 2025 - GH500SecretDemo
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
